{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Start",
            "runtimeExecutable": "yarn", // Use Yarn to run the script
            "runtimeArgs": [
                "start"
            ], // This runs your "start" script
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Config",
            "runtimeExecutable": "yarn",
            "runtimeArgs": [
                "run",
                "config"
            ], // Reference the `update_config` script
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Build",
            "runtimeExecutable": "yarn",
            "runtimeArgs": ["build"
            ], // Reference the `update_config` script
            "skipFiles": [
                "<node_internals>/**"
            ],
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "env": {
                "NODE_ENV": "development"
            }
        },
        {
            "name": "Python: FastAPI",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "src.app.oidc:app",
                "--reload"
            ]
        }
    ]
}